@model SMTI_SGHE.Models.AddStudentViewModel

<h1>Add Patient</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">PatientName</label>
        <input type="text" class="form-control" asp-for="fName" />
    </div>

    <div class="mt-3">
        <label class="form-label">MobileNumber</label>
        <input type="text" class="form-control" asp-for="lName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">PatientAge</label>
        <input type="text" class="form-control" asp-for="DOB" />
    </div>

    <div class="mt-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>